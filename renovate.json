{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "pinDigests": false,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["pin", "digest", "pinDigest"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Group Tailwind and styling related packages",
      "groupName": "styling packages",
      "matchPackageNames": ["tailwindcss", "autoprefixer", "postcss"]
    },
    {
      "description": "Automerge devDependencies (like Tailwind) to keep noise down",
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ],
  "ignoreDeps": []
}
