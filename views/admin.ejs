<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="/style.css" rel="stylesheet">
</head>

<body class="text-slate-300 min-h-screen flex flex-col">

    <nav class="glass-header sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-6 h-16 flex justify-between items-center">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-linear-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white font-bold shadow-lg shadow-blue-500/20">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                </div>
                <h1 class="font-bold text-white tracking-tight text-lg">Status Admin</h1>
            </div>
            <div class="flex items-center gap-6">
                <a href="<%= publicUrl %>" target="_blank" class="text-sm font-medium text-slate-400 hover:text-white transition-colors flex items-center gap-1">
                    Public Page <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                </a>
                <div class="h-4 w-px bg-slate-700"></div>
                <a href="/logout" class="text-sm font-medium text-red-400 hover:text-red-300 transition-colors">Logout</a>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-6 py-8 w-full">
        
        <div class="flex items-center gap-8 border-b border-slate-800 mb-8">
            <button onclick="switchTab('monitors')" id="tab-btn-monitors" class="tab-btn active pb-4 px-2 font-medium transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>
                Monitors
            </button>
            <button onclick="switchTab('settings')" id="tab-btn-settings" class="tab-btn pb-4 px-2 font-medium transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                Global Settings
            </button>
        </div>

        <div id="tab-content-monitors" class="block animate-fade-in">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                
                <div class="lg:col-span-2 order-2 lg:order-1">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-lg font-bold text-white">Active Monitors</h2>
                        <span class="px-2 py-1 bg-slate-800 text-slate-400 rounded-sm text-xs font-mono border border-slate-700"><%= monitors.length %> configured</span>
                    </div>

                    <% if (monitors.length === 0) { %>
                        <div class="glass rounded-xl p-12 text-center border-dashed border-2 border-slate-800">
                            <div class="inline-flex p-4 rounded-full bg-slate-800/50 mb-4 text-slate-600">
                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                            </div>
                            <h3 class="text-white font-medium">No monitors yet</h3>
                            <p class="text-slate-500 text-sm mt-1">Add your first service using the panel on the right.</p>
                        </div>
                    <% } else { %>
                        <div class="space-y-3">
                            <% monitors.forEach(m => { %>
                                <div class="glass rounded-lg p-4 flex items-center justify-between group hover:bg-slate-800/40 transition-colors border border-transparent hover:border-slate-700">
                                    <div class="flex items-center gap-4 overflow-hidden">
                                        <div class="w-10 h-10 rounded-lg bg-[#0f172a] border border-slate-700 flex items-center justify-center shrink-0">
                                            <% if (m.status === 'up') { %>
                                                <div class="w-2.5 h-2.5 rounded-full bg-emerald-500 shadow-[0_0_10px_rgba(16,185,129,0.5)]"></div>
                                            <% } else if (m.status === 'down') { %>
                                                <div class="w-2.5 h-2.5 rounded-full bg-red-500 shadow-[0_0_10px_rgba(239,68,68,0.5)]"></div>
                                            <% } else { %>
                                                <div class="w-2.5 h-2.5 rounded-full bg-yellow-500 animate-pulse"></div>
                                            <% } %>
                                        </div>
                                        <div class="min-w-0">
                                            <h3 class="font-semibold text-white truncate pr-4"><%= m.name %></h3>
                                            <div class="flex items-center gap-3 text-xs text-slate-500 font-mono mt-0.5">
                                                <span class="truncate max-w-[200px]"><%= m.url %></span>
                                                <span class="text-slate-700">|</span>
                                                <span><%= m.interval %>s</span>
                                                <span class="text-slate-700">|</span>
                                                <span title="Failure Threshold"><%= m.threshold || 3 %> tries</span>
                                                
                                                <% if (m.notification_url) { %>
                                                    <span class="text-slate-700">|</span>
                                                    <span class="text-blue-400 flex items-center gap-1">
                                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg>
                                                    </span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="flex items-center gap-2 pl-4">
                                        <button onclick="openEditModal(<%= JSON.stringify(m) %>)" class="p-2 text-slate-500 hover:text-white hover:bg-slate-700 rounded-lg transition-all" title="Edit">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                                        </button>
                                        <form action="/api/monitors/delete/<%= m.id %>" method="POST" onsubmit="return confirm('Permanently delete <%= m.name %>?');">
                                            <input type="hidden" name="_csrf" value="<%= _csrf %>">
                                            <button type="submit" class="p-2 text-slate-500 hover:text-red-400 hover:bg-red-500/10 rounded-lg transition-all" title="Delete">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>
                </div>

                <div class="lg:col-span-1 order-1 lg:order-2">
                    <div class="glass rounded-xl p-6 sticky top-24 border border-slate-800">
                        <h2 class="text-lg font-bold text-white mb-5 flex items-center gap-2">
                            <div class="w-2 h-2 rounded-full bg-emerald-500"></div>
                            New Monitor
                        </h2>
                        
                        <form action="/api/monitors" method="POST" class="space-y-4">
                            <input type="hidden" name="_csrf" value="<%= _csrf %>">
                            <div>
                                <label class="block text-xs font-bold uppercase text-slate-500 mb-1.5 tracking-wider">Service Name</label>
                                <input type="text" name="name" required placeholder="e.g. Production API" 
                                    class="w-full bg-[#0f172a] border border-slate-700 rounded-lg px-3 py-2.5 text-sm text-white focus:outline-hidden focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all placeholder:text-slate-600">
                            </div>

                            <div>
                                <label class="block text-xs font-bold uppercase text-slate-500 mb-1.5 tracking-wider">URL to Check</label>
                                <input type="url" name="url" required placeholder="https://" 
                                    class="w-full bg-[#0f172a] border border-slate-700 rounded-lg px-3 py-2.5 text-sm text-white focus:outline-hidden focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all placeholder:text-slate-600">
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-xs font-bold uppercase text-slate-500 mb-1.5 tracking-wider">Check Interval</label>
                                    <div class="relative">
                                        <input type="number" name="interval" value="60" min="10" required 
                                            class="w-full bg-[#0f172a] border border-slate-700 rounded-lg pl-3 pr-2 py-2.5 text-sm text-white focus:outline-hidden focus:border-blue-500 transition-all">
                                        <span class="absolute right-3 top-2.5 text-sm text-slate-500 pointer-events-none">sec</span>
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-xs font-bold uppercase text-slate-500 mb-1.5 tracking-wider">Threshold</label>
                                    <div class="relative">
                                        <input type="number" name="threshold" value="3" min="1" max="10" required 
                                            class="w-full bg-[#0f172a] border border-slate-700 rounded-lg pl-3 pr-2 py-2.5 text-sm text-white focus:outline-hidden focus:border-blue-500 transition-all">
                                        <span class="absolute right-3 top-2.5 text-sm text-slate-500 pointer-events-none">x</span>
                                    </div>
                                </div>
                            </div>

                            <div class="pt-2 border-t border-slate-800 mt-2">
                                <label class="block text-xs font-bold uppercase text-slate-500 mb-2 tracking-wider">Alerts (Optional)</label>
                                <input type="url" name="notification_url" placeholder="URL (Leave blank for global default)" 
                                    class="w-full bg-[#0f172a] border border-slate-700 rounded-lg px-3 py-2.5 text-sm text-white mb-3 focus:outline-hidden focus:border-blue-500 transition-all placeholder:text-slate-600">
                                <input type="password" name="notification_token" placeholder="Token (Leave blank for global default)" 
                                    class="w-full bg-[#0f172a] border border-slate-700 rounded-lg px-3 py-2.5 text-sm text-white focus:outline-hidden focus:border-blue-500 transition-all placeholder:text-slate-600">
                            </div>

                            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-semibold py-2.5 rounded-lg transition-all mt-2 text-sm shadow-lg shadow-blue-900/20 active:scale-[0.98]">
                                Add Monitor
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div id="tab-content-settings" class="hidden animate-fade-in">
            <div class="max-w-2xl mx-auto space-y-8">
                
                <div class="glass rounded-xl p-8 border border-slate-800">
                    <form action="/api/settings" method="POST" class="space-y-6">
                        <input type="hidden" name="_csrf" value="<%= _csrf %>">
                        <div class="flex items-center gap-3 mb-6 pb-6 border-b border-slate-800">
                            <div class="p-2 bg-purple-500/10 rounded-lg">
                                <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                            </div>
                            <div>
                                <h2 class="text-xl font-bold text-white">Public Page Settings</h2>
                                <p class="text-slate-500 text-sm">Customize how your status page looks to visitors.</p>
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-bold uppercase text-slate-500 mb-2 tracking-wider">Browser Title & Heading</label>
                            <input type="text" name="title" value="<%= settings.title %>" 
                                class="w-full bg-[#0f172a] border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-hidden focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all">
                        </div>

                        <div>
                            <label class="block text-xs font-bold uppercase text-slate-500 mb-2 tracking-wider">Logo Image URL</label>
                            <div class="flex gap-4">
                                <div class="grow">
                                    <input type="text" name="logo_url" value="<%= settings.logo_url %>" placeholder="https://example.com/logo.png" 
                                        class="w-full bg-[#0f172a] border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-hidden focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all placeholder:text-slate-600">
                                </div>
                                <% if(settings.logo_url) { %>
                                    <div class="w-12 h-12 rounded-lg bg-slate-800 border border-slate-700 flex items-center justify-center shrink-0">
                                        <img src="<%= settings.logo_url %>" alt="Preview" class="max-w-full max-h-full object-contain">
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-bold uppercase text-slate-500 mb-2 tracking-wider">Footer Copyright Text</label>
                            <input type="text" name="footer_text" value="<%= settings.footer_text %>" 
                                class="w-full bg-[#0f172a] border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-hidden focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all">
                        </div>

                        <div class="pt-6 mt-6 border-t border-slate-800">
                            <div class="flex items-center gap-3 mb-6">
                                <div class="p-2 bg-blue-500/10 rounded-lg">
                                    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg>
                                </div>
                                <div>
                                    <h2 class="text-xl font-bold text-white">Global Notifications</h2>
                                    <p class="text-slate-500 text-sm">Default webhook used when a monitor has no specifics set.</p>
                                </div>
                            </div>

                            <div class="space-y-4">
                                <div>
                                    <label class="block text-xs font-bold uppercase text-slate-500 mb-2 tracking-wider">Default Webhook URL</label>
                                    <input type="url" name="default_notification_url" value="<%= settings.default_notification_url || '' %>" placeholder="https://ntfy.sh/..." 
                                        class="w-full bg-[#0f172a] border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-hidden focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all placeholder:text-slate-600">
                                </div>
                                <div>
                                    <label class="block text-xs font-bold uppercase text-slate-500 mb-2 tracking-wider">Default Token (Optional)</label>
                                    <input type="password" name="default_notification_token" value="<%= settings.default_notification_token || '' %>" placeholder="Bearer Token" 
                                        class="w-full bg-[#0f172a] border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-hidden focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all placeholder:text-slate-600">
                                </div>
                            </div>
                        </div>

                        <div class="pt-6 mt-6 border-t border-slate-800">
                            <div class="flex items-center gap-3 mb-6">
                                <div class="p-2 bg-emerald-500/10 rounded-lg">
                                    <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path></svg>
                                </div>
                                <div>
                                    <h2 class="text-xl font-bold text-white">Footer Customization</h2>
                                    <p class="text-slate-500 text-sm">Add useful links and toggles to your public status page.</p>
                                </div>
                            </div>

                            <div class="space-y-6">
                                <div class="flex items-center justify-between p-4 rounded-lg bg-[#0b1120] border border-slate-700">
                                    <div>
                                        <label class="font-bold text-white text-sm">Show Aggregated Stats</label>
                                        <p class="text-xs text-slate-500">Display Monitors Count, Avg Latency, and Up/Down counts in the footer.</p>
                                    </div>
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" name="show_footer_stats" class="sr-only peer" <%= settings.show_footer_stats ? 'checked' : '' %>>
                                        <div class="w-11 h-6 bg-slate-700 peer-focus:outline-hidden rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                                    </label>
                                </div>

                                <div>
                                    <label class="block text-xs font-bold uppercase text-slate-500 mb-2 tracking-wider">Extra Footer Info (Optional)</label>
                                    <textarea name="footer_info" rows="3" placeholder="e.g. For billing inquiries, contact billing@example.com" 
                                        class="w-full bg-[#0f172a] border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-hidden focus:border-emerald-500 focus:ring-1 focus:ring-emerald-500 transition-all placeholder:text-slate-600"><%= settings.footer_info %></textarea>
                                </div>

                                <div>
                                    <label class="block text-xs font-bold uppercase text-slate-500 mb-3 tracking-wider">Custom Footer Links</label>
                                    <div id="links-container" class="space-y-3">
                                        <% 
                                        let links = [];
                                        try { links = JSON.parse(settings.footer_links || '[]'); } catch(e){}
                                        links.forEach(link => { 
                                        %>
                                            <div class="flex gap-2">
                                                <input type="text" name="link_labels[]" value="<%= link.label %>" placeholder="Label (e.g. Terms)" class="flex-1 bg-[#0f172a] border border-slate-700 rounded-lg px-3 py-2 text-sm text-white focus:border-blue-500 focus:outline-hidden">
                                                <input type="url" name="link_urls[]" value="<%= link.url %>" placeholder="URL (https://...)" class="flex-2 bg-[#0f172a] border border-slate-700 rounded-lg px-3 py-2 text-sm text-white focus:border-blue-500 focus:outline-hidden">
                                                <button type="button" onclick="this.parentElement.remove()" class="text-red-400 hover:text-red-300 p-2"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg></button>
                                            </div>
                                        <% }) %>
                                    </div>
                                    <button type="button" onclick="addLinkRow()" class="mt-3 text-sm text-blue-400 hover:text-blue-300 font-medium flex items-center gap-1">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg> Add Link
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="pt-6 border-t border-slate-800 flex justify-end">
                            <button type="submit" class="px-6 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-semibold rounded-lg transition-all shadow-lg shadow-blue-900/20 active:scale-[0.98]">
                                Save All Settings
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </main>

    <div id="editModal" class="fixed inset-0 z-100 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-slate-900/80 backdrop-blur-xs transition-opacity" onclick="closeEditModal()"></div>
        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-center justify-center p-4 text-center">
                <div class="relative transform overflow-hidden rounded-2xl bg-[#0f172a] border border-slate-700 text-left shadow-2xl transition-all w-full max-w-lg scale-100">
                    <form id="editForm" method="POST" class="p-6 space-y-5">
                        <input type="hidden" name="_csrf" value="<%= _csrf %>">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-lg font-bold text-white">Edit Monitor</h3>
                            <button type="button" onclick="closeEditModal()" class="text-slate-500 hover:text-white">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                            </button>
                        </div>
                        
                        <div>
                            <label class="block text-xs font-bold uppercase text-slate-500 mb-1.5">Friendly Name</label>
                            <input type="text" id="edit_name" name="name" required class="w-full bg-[#0b1120] border border-slate-700 rounded-lg px-3 py-2.5 text-sm text-white focus:border-blue-500 focus:outline-hidden">
                        </div>
                        <div>
                            <label class="block text-xs font-bold uppercase text-slate-500 mb-1.5">Target URL</label>
                            <input type="url" id="edit_url" name="url" required class="w-full bg-[#0b1120] border border-slate-700 rounded-lg px-3 py-2.5 text-sm text-white focus:border-blue-500 focus:outline-hidden">
                        </div>
                        
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-xs font-bold uppercase text-slate-500 mb-1.5">Check Interval (s)</label>
                                <input type="number" id="edit_interval" name="interval" min="10" required class="w-full bg-[#0b1120] border border-slate-700 rounded-lg px-3 py-2.5 text-sm text-white focus:border-blue-500 focus:outline-hidden">
                            </div>
                            <div>
                                <label class="block text-xs font-bold uppercase text-slate-500 mb-1.5">Failure Threshold (x)</label>
                                <input type="number" id="edit_threshold" name="threshold" min="1" max="10" required class="w-full bg-[#0b1120] border border-slate-700 rounded-lg px-3 py-2.5 text-sm text-white focus:border-blue-500 focus:outline-hidden">
                            </div>
                        </div>

                        <div class="pt-2 border-t border-slate-800">
                            <label class="block text-xs font-bold uppercase text-slate-500 mb-2">Notification Settings</label>
                            <input type="url" id="edit_notify_url" name="notification_url" placeholder="Webhook URL (Leave empty for default)" class="w-full bg-[#0b1120] border border-slate-700 rounded-lg px-3 py-2.5 text-sm text-white mb-3 focus:border-blue-500 focus:outline-hidden">
                            <input type="password" id="edit_notify_token" name="notification_token" placeholder="Token (leave empty to keep unchanged)" class="w-full bg-[#0b1120] border border-slate-700 rounded-lg px-3 py-2.5 text-sm text-white focus:border-blue-500 focus:outline-hidden">
                        </div>

                        <div class="flex justify-end gap-3 mt-6 pt-4 border-t border-slate-800">
                            <button type="button" onclick="closeEditModal()" class="px-4 py-2 text-sm font-medium text-slate-400 hover:text-white transition-colors">Cancel</button>
                            <button type="submit" class="px-4 py-2 text-sm font-bold text-white bg-blue-600 rounded-lg hover:bg-blue-500 shadow-lg shadow-blue-900/20">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // TAB LOGIC
        function switchTab(tabName) {
            document.getElementById('tab-content-monitors').classList.add('hidden');
            document.getElementById('tab-content-settings').classList.add('hidden');
            document.getElementById('tab-btn-monitors').classList.remove('active');
            document.getElementById('tab-btn-settings').classList.remove('active');
            document.getElementById(`tab-content-${tabName}`).classList.remove('hidden');
            document.getElementById(`tab-btn-${tabName}`).classList.add('active');
            localStorage.setItem('adminTab', tabName);
        }

        const savedTab = localStorage.getItem('adminTab');
        if (savedTab) { switchTab(savedTab); }

        // MODAL LOGIC
        function openEditModal(monitor) {
            document.getElementById('edit_name').value = monitor.name;
            document.getElementById('edit_url').value = monitor.url;
            document.getElementById('edit_interval').value = monitor.interval;
            document.getElementById('edit_threshold').value = monitor.threshold || 3;
            document.getElementById('edit_notify_url').value = monitor.notification_url || '';
            document.getElementById('edit_notify_token').value = '';
            document.getElementById('editForm').action = `/api/monitors/edit/${monitor.id}`;
            document.getElementById('editModal').classList.remove('hidden');
        }

        function addLinkRow() {
            const div = document.createElement('div');
            div.className = 'flex gap-2';
            div.innerHTML = `
                <input type="text" name="link_labels[]" placeholder="Label (e.g. Privacy)" class="flex-1 bg-[#0f172a] border border-slate-700 rounded-lg px-3 py-2 text-sm text-white focus:border-blue-500 focus:outline-hidden">
                <input type="url" name="link_urls[]" placeholder="URL" class="flex-2 bg-[#0f172a] border border-slate-700 rounded-lg px-3 py-2 text-sm text-white focus:border-blue-500 focus:outline-hidden">
                <button type="button" onclick="this.parentElement.remove()" class="text-red-400 hover:text-red-300 p-2"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg></button>
            `;
            document.getElementById('links-container').appendChild(div);
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.add('hidden');
        }
    </script>

</body>
</html>
